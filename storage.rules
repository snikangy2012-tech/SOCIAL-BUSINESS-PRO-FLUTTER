rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Product images - vendeurs can upload, everyone can read
    // Path: products/{productId}/{imageId}
    match /products/{productId}/{imageId} {
      allow read: if true; // Public read for product images
      allow write: if isAuthenticated(); // Any authenticated user can upload
      allow delete: if isAuthenticated(); // Any authenticated user can delete their images
    }

    // User profile images (new path)
    match /users/{userId}/profile/{imageId} {
      allow read: if true;
      allow write: if isAuthenticated() && isOwner(userId);
      allow delete: if isAuthenticated() && isOwner(userId);
    }

    // User profile photos (direct path - for backward compatibility)
    match /profile_photos/{fileName} {
      allow read: if true;
      allow write: if isAuthenticated();
      allow delete: if isAuthenticated();
    }

    // Shop/Boutique images
    match /shops/{userId}/{imageId} {
      allow read: if true; // Public read for shop images
      allow write: if isAuthenticated() && isOwner(userId);
      allow delete: if isAuthenticated() && isOwner(userId);
    }

    // Delivery proof images
    match /deliveries/{deliveryId}/{imageId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Order-related documents
    match /orders/{orderId}/{documentId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Reports - Admin only
    match /reports/{reportId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
  }
}